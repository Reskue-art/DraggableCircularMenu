{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "importHelpers": true
  },
  "include": [
    "./SalaryWheel.tsx",
    "./useDraggable.ts"
  ],
  "exclude": ["node_modules", "dist"]
}